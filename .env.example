# Docker Compose Configuration Defaults
# Copy this file to .env and modify as needed

# Build Configuration
DOCKER_BUILD_CONTEXT=.
DOCKER_DOCKERFILE=Dockerfile
BUN_VERSION=latest

# Image Configuration
DOCKER_IMAGE_NAME=vectornest
DOCKER_IMAGE_TAG=latest

# Container Configuration
DOCKER_CONTAINER_NAME=vectornest

# Port Configuration
DOCKER_PORT=5173
DOCKER_INTERNAL_PORT=5173

# Vite Preview Server (must match DOCKER_INTERNAL_PORT)
VITE_PREVIEW_PORT=5173

# Environment
NODE_ENV=production
VITE_APP_TITLE=VectorNest

# Restart Policy (no, always, on-failure, unless-stopped)
DOCKER_RESTART_POLICY=unless-stopped

# Health Check Configuration
DOCKER_HEALTH_INTERVAL=30s
DOCKER_HEALTH_TIMEOUT=10s
DOCKER_HEALTH_RETRIES=3
DOCKER_HEALTH_START_PERIOD=40s
